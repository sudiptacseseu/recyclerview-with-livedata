<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonDecrement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:backgroundTint="@null"
        android:background="@drawable/shape_numberpicker_button_left"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="-"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextDisplay"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_numberpicker_edittext"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="100"
        android:textColor="@color/text_color" />


    <Button
        android:id="@+id/buttonIncrement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_numberpicker_button_right"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="+"
        android:textSize="18sp" />

</LinearLayout>